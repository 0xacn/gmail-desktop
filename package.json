{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "1.0.1",
  "description": "Unofficial Gmail Desktop App",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "xo",
    "prettier": "prettier --no-semi --single-quote --write",
    "prettify": "npm run prettier -- src/*.js",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows"
  },
  "dependencies": {
    "electron-debug": "^2.1.0",
    "electron-is-dev": "^1.0.1",
    "electron-updater": "^4.0.6"
  },
  "devDependencies": {
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "eslint-config-prettier": "^2.3.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "xo": "^0.23.0"
  },
  "xo": {
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm test",
      "npm run prettier",
      "git add"
    ]
  },
  "build": {
    "files": [
      "**/*"
    ],
    "appId": "io.cheung.gmail-desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Office"
    }
  }
}
